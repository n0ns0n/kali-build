---
# tasks file for configure-xfce
- name: "Install Kali-X (Old) theme"
  copy:
    src: "{{ role_path }}/files/themes/"
    dest: "/usr/share/themes/"
  become: true
  become_method: sudo
- name: "Install Vibrancy-Kali (Old) icon theme"
  copy:
    src: "{{ role_path }}/files/icons/"
    dest: "/usr/share/icons/"
  become: true
  become_method: sudo
- name: "Install custom desktop backgrounds"
  copy:
    src: "{{ role_path }}/files/backgrounds/"
    dest: "/usr/share/backgrounds/kali-16x9/"
  become: true
  become_method: sudo
- name: "Copy Xfce4 and QT5 config files"
  copy:
    src: "{{ role_path }}/files/config/"
    dest: "{{ ansible_env.HOME }}/.config/"

